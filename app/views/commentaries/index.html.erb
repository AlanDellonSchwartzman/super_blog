<p id="notice"><%= notice %></p>

<h1>Commentaries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commentaries.each do |commentary| %>
      <tr>
        <td><%= commentary.title %></td>
        <td><%= commentary.body %></td>
        <td><%= commentary.user %></td>
        <td><%= commentary.post %></td>
        <td><%= link_to 'Visualizar', commentary %></td>
        <td><%= link_to 'Editar', edit_commentary_path(commentary) %></td>
        <td><%= link_to 'Apagar', commentary, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar este comentário?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo comentário', new_commentary_path %>
