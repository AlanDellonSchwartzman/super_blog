<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Img post</th>
      <th>User</th>
      <th>Commentary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body[1..50] << " ..." %></td>
        <td><%= post.img_post %></td>
        <td><%= post.user.nickname %></td>
        <td><%= link_to 'Visualizar Comentários', post %></td>
        <td><%= link_to 'Visualizar', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Apagar', post, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar este post?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_post_path %>
