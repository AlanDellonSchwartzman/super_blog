<table class="table table-striped table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Título</th>
      <th>Conteúdo</th>
      <th>Img post</th>
      <th>Criador</th>
      <th>Comentários</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body[1..50] << " ..." %></td>
        <td><%= image_tag post.img_post, :class => "card-img-top img-thumbnail"  %></td>
        <td><%= post.user.nickname %></td>
        <td><%= link_to 'Visualizar Comentários', post, :class => "badge badge-pill badge-secondary" %></td>
        <td><%= link_to 'Visualizar', post, :class => "badge badge-pill badge-secondary" %></td>
        <td><%= link_to 'Editar', edit_post_path(post), :class => "badge badge-pill badge-secondary" %></td>
        <td><%= link_to 'Apagar', post, method: :delete, :class => "badge badge-pill badge-secondary", data: { confirm: 'Você tem certeza que deseja apagar este post?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>