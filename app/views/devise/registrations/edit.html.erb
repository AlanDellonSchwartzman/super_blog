<div class = "conteiner">
  <div class = "form-group d-flex justify-content-center">
    <h1>Seus dados</h1>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
      <%= f.label "Nome" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control"%>
    </div>
  </div>
  
  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
      <%= f.label "Usuário" %><br />
      <%= f.text_field :nickname, autocomplete: "nickname", :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
    <%= f.label "Senha" %> <i>(Deixe em branco se não quiser alterá-la)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
    <% if @minimum_password_length %>
      <em> no mínimo <%= @minimum_password_length %> caracteres </em>
    <% end %>
    </div>
  </div>

  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
    <%= f.label "Confirmação da Senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <div class="col-md-6 offset-md-3">
    <%= f.label "Senha atual" %> <i>(Precisamos da sua senha atual para confirmar suas alterações)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <div class="actions col-md-6 offset-md-3">
      <%= f.submit "Salvar", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

  <div class="field form-group">
    <div class="actions col-md-6 offset-md-3">
      <h5>Cancelar minha conta</h5>
    </div>
  </div>
    
  <div class="field form-group">
    <div class="actions col-md-6 offset-md-3">
      <p>Deseja excluir sua conta? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza que deseja apagar sua conta ?" }, method: :delete%></p>
    </div>
  </div>
  
  <div class="field form-group">
    <div class="actions col-md-6 offset-md-3">  
      <%= link_to "Voltar", :back, :class => "badge badge-light" %>
    </div>
  </div>
</div>