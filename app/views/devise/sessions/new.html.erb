<div class = "conteiner">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<form>
    <div class = "form-group d-flex justify-content-center">
      <h2>Log in</h2>
    </div>
  
    <div class="field form-group">
      <div class="col-md-6 offset-md-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  
    <div class="field form-group">
      <div class="col-md-6 offset-md-3">
        <%= f.label "Senha" %><br />
        <%= f.password_field :password, :class => "form-control", autocomplete: "current-password" %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <div class="col-md-6 offset-md-3">
          <div class="form-check">
            <%= f.check_box :remember_me, :class => "form-check-input" %>
            <%= f.label "Manter conectado" %>
          </div>
        </div>
      </div>
    <% end %>
  
    <div class="actions form-group">
      <div class="col-md-6 offset-md-3">
        <%= f.submit "Entrar", :class => "btn btn-primary" %>
      </div>
    </div>
    
    <div class="actions form-group">
      <div class="col-md-6 offset-md-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</form>
<% end %>
</div>